package utils;

import java.math.BigDecimal;

public class ValueCalculator {

	BigDecimal dayPrice = new BigDecimal(420.69);
	Integer dayAmount;
	BigDecimal totalPrice;
	
	public ValueCalculator() {
	}

	public ValueCalculator(String dayPrice) {
		this.dayPrice = new BigDecimal(dayPrice);
	}

	public void setDayAmount(Integer dayAmount) {
		this.dayAmount = dayAmount;
	}

	public BigDecimal getTotalPrice() {
		totalPrice = new BigDecimal(dayAmount).multiply(dayPrice);
		return totalPrice;
	}
}