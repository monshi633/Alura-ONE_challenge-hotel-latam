		labelNuevoHuesped.setForeground(new Color(255, 255, 255));
		labelNuevoHuesped.setFont(new Font("Roboto", Font.PLAIN, 18));
		labelNuevoHuesped.setBounds(0, 0, 150, 35);
		btnNuevoHuesped.add(labelNuevoHuesped);
